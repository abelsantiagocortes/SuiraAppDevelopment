<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/clr_veryGrey</item>
        <item name="colorPrimaryDark">@color/clr_veryGrey</item>
        <item name="colorAccent">@color/clr_veryGrey</item>
    </style>

    <!-- ATOM STYLES -->

    <!-- Typography -->

    <style name="typ_reallyBig">
        <item name= "android:textColor">@color/clr_quiteGrey</item>
        <item name= "android:textSize">40dp</item>
        <item name= "android:fontFamily">@font/source_sans_pro_light</item>
    </style>

    <style name="typ_Big">
        <item name= "android:textColor">@color/clr_quiteGrey</item>
        <item name= "android:textSize">30dp</item>
        <item name= "android:fontFamily">@font/source_sans_pro_light</item>
    </style>

    <style name="typ_kindaBig">
        <item name= "android:textColor">@color/clr_quiteGrey</item>
        <item name= "android:textSize">25dp</item>
        <item name= "android:fontFamily">@font/source_sans_pro_light</item>
    </style>

    <style name="typ_small">
        <item name= "android:textColor">@color/clr_quiteGrey</item>
        <item name= "android:textSize">20dp</item>
        <item name= "android:fontFamily">@font/source_sans_pro_light</item>
    </style>

    <style name="typ_reallySmall">
        <item name= "android:textColor">@color/clr_quiteGrey</item>
        <item name= "android:textSize">16dp</item>
        <item name= "android:fontFamily">@font/source_sans_pro_light</item>
    </style>


    <!-- Form Elements -->

        <!-- Normal Elements -->

    <style name="frm_notification">
        <item name="android:background">@drawable/frm_notification</item>

        <item name= "android:layout_width">350dp</item>
        <item name= "android:layout_height">65dp</item>

        <item name= "android:textSize">30dp</item>
        <item name= "android:fontFamily">@font/source_sans_pro_light</item>


        <!-- Color Attributes-->
        <item name= "android:textColor">@color/clr_veryGrey</item>
        <item name= "android:textColorHint">@color/clr_quiteGrey</item>
        <item name= "android:textCursorDrawable">@color/clr_kindaGrey</item>
        <item name= "android:textColorLink">@color/clr_justWhite</item>

    </style>

    <style name="frm_thin">
        <item name="android:background">@drawable/frm_normal_thin</item>

        <item name= "android:layout_width">350dp</item>

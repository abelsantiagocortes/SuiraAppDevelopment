<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Opportunities.CreateOpportunity2">


    <TextView
        android:id="@+id/textView5"
        style="@style/typ_boldTitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Create Opportunity" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/clr_kindaGrey"
        tools:ignore="DuplicateIds" />


    <TextView
        android:id="@+id/textView10"
        style="@style/typ_kindaBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Date"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/eDate"
        style="@style/frm_short"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView11"
        style="@style/typ_kindaBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Location"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/eLocation"
        style="@style/frm_short"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/location"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textView12"
        style="@style/typ_kindaBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Budget"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/eBudget"
        style="@style/frm_thick"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="numberDecimal"

        />

    <Button
        android:id="@+id/button8"
        style="@style/btn_highAction"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="Publish" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/landingpage_background">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:alpha="05"
      android:orientation="vertical">

    <Button

        android:id="@+id/btn_1_3"
        style="@style/typ_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="287dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="18dp"
        android:background="#00FFFFFF"
        android:text="log in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtV_1_1"
        style="@style/typ_reallySmall"


        android:layout_width="wrap_content"
        android:layout_height="144dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:foregroundGravity="top"
        android:gravity="start|top"
        android:text="suira"
        android:textColor="#FFFFFF"
        android:textSize="130dp" />

    <TextView
        android:id="@+id/txtV_1_2"
        style="@style/typ_small"


        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="para las industrias creativas"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtV_1_"
        style="@style/typ_reallyBig"


        android:layout_width="174dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="10dp"
        android:text="Necesito..."
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etxt_1_1"
        style="@style/frm_thick"


        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/bnt_1_2"
        style="@style/btn_highAction"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:text="Buscar" />

    <Button
        android:id="@+id/btn_1_1"
        style="@style/typ_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:text="@string/para_las_industrias_creativas"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:rotation="270"
        app:srcCompat="@drawable/back" />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
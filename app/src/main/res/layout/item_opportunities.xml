<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardiOpps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_low_action"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/applicationLayout"
        android:layout_width="360dp"
        android:layout_height="152dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/notification_border">


        <TextView
            android:id="@+id/txtOppo"
            style="@style/typ_boldTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="Nombre Oportunidad"
            android:textColor="@color/clr_veryGrey"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAplicaciones"
            style="@style/btn_lowAction"
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="16dp"
            android:gravity="bottom|center"
            android:text="Aplicantes"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnEditar"
            style="@style/btn_highAction"
            android:layout_width="114dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="12dp"
            android:gravity="bottom|center"
            android:text="Editar"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnAplicaciones"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="133dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="Aplicantes:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtOppo" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:text="6"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/textViewDescription"
            app:layout_constraintTop_toBottomOf="@+id/txtOppo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>